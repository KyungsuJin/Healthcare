<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.test.mall1.boardcomment.service.BoardCommentMapper">
	<select id="totalCountBoardComment" resultType="Integer">
		SELECT
			COUNT(*)
		FROM board_comment
	</select>	
	<select id="selectBoardCommentResult" parameterType="java.util.Map" resultType="com.test.mall1.boardcomment.service.BoardComment">
			SELECT 
				comment_no as commentNo
				,board_no as boardNo
				,comment_content as commentContent
				,member_id as memberId
			FROM board_comment
			ORDER BY comment_no ASC
			LIMIT #{beginRow},#{pagePerRow}
	</select>
	<insert id="insertBoardComment" parameterType="com.test.mall1.boardcomment.service.BoardComment">
		INSERT INTO board_comment(
			board_no
			,comment_content
			,member_id
		)VALUES (
			#{boardNo}
			,#{commentContent}
			,#{memberId}
		)		
	</insert>
</mapper>