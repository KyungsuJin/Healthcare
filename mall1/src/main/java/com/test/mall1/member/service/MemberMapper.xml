<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.test.mall1.member.service.MemberMapper">
	
	<select id="totalCountMember"
		resultType="Integer">
		SELECT
			COUNT(*)
		FROM member
	</select>
	
	<select id="selectMemberList"
		parameterType="java.util.Map"
		resultType="com.test.mall1.member.service.Member">
		SELECT
			member_no AS memberNo
			,member_id AS memberId
			,member_pw AS memberPw
		FROM member
		ORDER BY member_no DESC
		LIMIT #{beginRow}, #{pagePerRow}
	</select>

	<select id="selectMemberById"
		parameterType="com.test.mall1.member.service.Member"
		resultType="com.test.mall1.member.service.Member"
		>
		SELECT
			member_no AS memberNo
			,member_id AS memberId
			,member_pw AS memberPw
		FROM member
		WHERE member_id = #{memberId}
		AND member_pw = #{memberPw}
	</select>
	
	<insert id="insertMember" parameterType="com.test.mall1.member.service.Member">
		INSERT INTO member(
			member_id
			,member_pw
		) VALUES(
			#{memberId}
			,#{memberPw}
		)
	</insert> 
</mapper>