<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.mall1.order.service.OrderMapper">
	<insert id="addOrder" parameterType="com.test.mall1.order.service.Order">
		INSERT INTO orders(
			member_no
			,item_no
			,order_date
		)VALUES(
			#{memberNo}
			,#{itemNo}
			,now()
		)
	</insert>
	
	<select id="orderList"
			parameterType="Integer"
			resultType="java.util.List">
		SELECT
			order_no as orderNo
			,item_name as itemName
			,item_price as itemPrice
			,order_date as ordersDate
		FROM orders INNER JOIN item ON orders.item_no=item.item_no
		WHERE orders.member_no=#{memberNo}
	</select>
</mapper>