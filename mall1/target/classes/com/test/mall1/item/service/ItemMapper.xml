	<select id="selectItemList"
			parameterType="java.util.Map"
			resultType="com.test.mall1.item.service.Item">
		SELECT
			item_name as itemName
			,item_price as itemPrice
		FROM item
		ORDER BY itemPrice
		LIMIT #{beginRow},#{pagePerRow}
	</select>
	
	<select id="totalCountMember"
			resultType="Integer">
		SELECT COUNT(*) FROM item
	
	</select>
	
	<insert id="insertItem" parameterType="com.test.mall1.item.service.Item">
		INSERT INTO item(
			item_name
			,item_price
		)VALUES(
			#{itemName}
			,#{itemPrice}
		)
	</insert>
</mapper>